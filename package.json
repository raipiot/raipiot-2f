{
  "name": "raipiot-srm",
  "description": "raipiot SRM 管理系统、采购商城",
  "author": "Bruce Song <recall4056@gmail.com> (https://github.com/recallwei/)",
  "scripts": {
    "dev:admin": "FORCE_COLOR=1 turbo dev --filter=@raipiot-srm/admin",
    "dev:shopping": "FORCE_COLOR=1 turbo dev --filter=@raipiot-srm/shopping",
    "build:admin:staging": "FORCE_COLOR=1 turbo build:staging --filter=@raipiot-srm/admin",
    "build:shopping:staing": "FORCE_COLOR=1 turbo build:staging --filter=@raipiot-srm/shopping",
    "build:admin:prod": "FORCE_COLOR=1 turbo build:prod --filter=@raipiot-srm/admin",
    "build:shopping:prod": "FORCE_COLOR=1 turbo build:prod --filter=@raipiot-srm/shopping",
    "preview:admin": "FORCE_COLOR=1 turbo preview --filter=@raipiot-srm/admin",
    "preview:shopping": "FORCE_COLOR=1 turbo preview --filter=@raipiot-srm/shopping",
    "desktop:dev:admin": "FORCE_COLOR=1 turbo desktop:dev --filter=@raipiot-srm/admin",
    "desktop:dev:shopping": "FORCE_COLOR=1 turbo desktop:dev --filter=@raipiot-srm/shopping",
    "desktop:build:staging:admin": "FORCE_COLOR=1 turbo desktop:build:staging --filter=@raipiot-srm/admin",
    "desktop:build:staging:shopping": "FORCE_COLOR=1 turbo desktop:build:staging --filter=@raipiot-srm/shopping",
    "desktop:build:prod:admin": "FORCE_COLOR=1 turbo desktop:build:prod --filter=@raipiot-srm/admin",
    "desktop:build:prod:shopping": "FORCE_COLOR=1 turbo desktop:build:prod --filter=@raipiot-srm/shopping",
    "clean": "FORCE_COLOR=1 turbo clean && rimraf node_modules",
    "cspell:sort:dict": "FORCE_COLOR=1 turbo cspell:sort:dict --filter=@raipiot-srm/cspell",
    "cspell:check": "FORCE_COLOR=1 turbo cspell:check",
    "type:check": "FORCE_COLOR=1 turbo type:check",
    "prettier:check": "FORCE_COLOR=1 turbo prettier:check",
    "prettier:fix": "FORCE_COLOR=1 turbo prettier:fix",
    "eslint:check": "FORCE_COLOR=1 turbo eslint:check",
    "eslint:fix": "FORCE_COLOR=1 turbo eslint:fix",
    "cz": "git-cz",
    "prepare": "husky"
  },
  "devDependencies": {
    "@commitlint/cli": "^18.6.0",
    "@commitlint/config-conventional": "^18.6.0",
    "@raipiot-infra/commitlint-config": "^0.0.2",
    "@raipiot-infra/cspell": "^0.0.5",
    "@raipiot-infra/prettier": "^0.0.2",
    "@raipiot-infra/tsconfig": "^0.0.2",
    "@raipiot-srm/cspell": "workspace:^",
    "@raipiot-srm/eslint-config": "workspace:^",
    "commitizen": "^4.3.0",
    "cspell": "^8.3.2",
    "cz-git": "^1.8.0",
    "eslint": "^8.56.0",
    "husky": "^9.0.7",
    "lint-staged": "^15.2.1",
    "prettier": "^3.2.4",
    "rimraf": "^5.0.5",
    "turbo": "^1.12.2",
    "typescript": "^5.3.3"
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-git"
    }
  },
  "packageManager": "pnpm@8.0.0",
  "engines": {
    "node": ">=20"
  },
  "private": true
}
